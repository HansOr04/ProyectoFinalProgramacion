<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:APPFinalPugaLopezOrtiz.ViewModels"
             xmlns:models="clr-namespace:APPFinalPugaLopezOrtiz.Services"
             x:Class="APPFinalPugaLopezOrtiz.Views.DepartamentoDetailPage"
             x:DataType="viewmodels:DepartamentoDetailViewModel"
             Title="{Binding Title}">

    <Grid RowDefinitions="*,Auto">
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Padding="20">
                <Image Source="{Binding Departamento.ImagenUrl}"
                       HeightRequest="200"
                       Aspect="AspectFill"
                       HorizontalOptions="Fill"/>

                <Label Text="{Binding Departamento.Titulo}"
                       FontSize="24"
                       FontAttributes="Bold"
                       Margin="0,10"/>

                <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto">
                    <Label Text="{Binding Departamento.Ciudad}"
                           FontSize="18"
                           Grid.Column="0"
                           Grid.Row="0"/>

                    <Label Text="{Binding Departamento.Localizacion}"
                           FontSize="18"
                           Grid.Column="1"
                           Grid.Row="0"/>

                    <Label Text="{Binding Departamento.Habitaciones, StringFormat='Habitaciones: {0}'}"
                           FontSize="16"
                           Grid.Column="0"
                           Grid.Row="1"/>

                    <Label Text="{Binding Departamento.Baños, StringFormat='Baños: {0}'}"
                           FontSize="16"
                           Grid.Column="1"
                           Grid.Row="1"/>
                </Grid>

                <Label Text="Descripción"
                       FontSize="20"
                       FontAttributes="Bold"
                       Margin="0,10,0,5"/>

                <Label Text="{Binding Departamento.Descripcion}"
                       FontSize="16"/>

                <Label Text="Lugares Cercanos"
                       FontSize="20"
                       FontAttributes="Bold"
                       Margin="0,10,0,5"/>

                <Label Text="{Binding Departamento.LugaresCercanos}"
                       FontSize="16"/>

                <HorizontalStackLayout Spacing="10" 
                                     Margin="0,10"
                                     HorizontalOptions="Center"
                                     IsVisible="{Binding CanEditDepartamento}">
                    <Button Text="Editar"
                            Command="{Binding EditComentarioCommand}"
                            WidthRequest="150"/>
                    <Button Text="Eliminar"
                            Command="{Binding DeleteComentarioCommand}"
                            BackgroundColor="Red"
                            WidthRequest="150"/>
                </HorizontalStackLayout>

                <BoxView HeightRequest="1"
                         Color="Gray"
                         Margin="0,10"/>

                <Label Text="Comentarios"
                       FontSize="20"
                       FontAttributes="Bold"
                       Margin="0,10"/>

                <CollectionView ItemsSource="{Binding Comentarios}">
                    <CollectionView.EmptyView>
                        <Label Text="No hay comentarios"
                               HorizontalOptions="Center"/>
                    </CollectionView.EmptyView>
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:ComentarioResponse">
                            <Frame Margin="0,5" Padding="10">
                                <Grid RowDefinitions="Auto,Auto,Auto">
                                    <HorizontalStackLayout Grid.Row="0">
                                        <Label Text="{Binding Usuario.Nombre}"
                                               FontAttributes="Bold"/>
                                        <Label Text="{Binding FechaCreacion, StringFormat=' - {0:d}'}"
                                               TextColor="Gray"/>
                                    </HorizontalStackLayout>

                                    <Label Grid.Row="1"
                                           Text="{Binding Contenido}"
                                           Margin="0,5"/>

                                    <HorizontalStackLayout Grid.Row="2" 
                                         IsVisible="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:DepartamentoDetailViewModel}}, Path=CanModifyComentario}"
                                         Spacing="10"
                                         HorizontalOptions="Center">
                                        <Button Text="Editar"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:DepartamentoDetailViewModel}}, Path=EditComentarioCommand}"
                                                CommandParameter="{Binding .}"
                                                WidthRequest="100"/>
                                        <Button Text="Eliminar"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:DepartamentoDetailViewModel}}, Path=DeleteComentarioCommand}"
                                                CommandParameter="{Binding .}"
                                                BackgroundColor="Red"
                                                WidthRequest="100"/>
                                    </HorizontalStackLayout>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>

        <Grid Grid.Row="1" 
              ColumnDefinitions="*,Auto"
              Padding="20"
              IsVisible="{Binding IsAuthenticated}">
            <Entry Grid.Column="0"
                   Text="{Binding NewComentario}"
                   Placeholder="Escribe un comentario..."/>
            <Button Grid.Column="1"
                    Text="Enviar"
                    Command="{Binding AddComentarioCommand}"
                    WidthRequest="100"/>
        </Grid>

        <ActivityIndicator Grid.RowSpan="2"
                          IsVisible="{Binding IsBusy}"
                          IsRunning="{Binding IsBusy}"
                          HorizontalOptions="Center"
                          VerticalOptions="Center"/>
    </Grid>

</ContentPage>