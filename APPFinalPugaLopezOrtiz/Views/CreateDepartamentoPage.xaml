<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:APPFinalPugaLopezOrtiz.ViewModels"
             x:Class="APPFinalPugaLopezOrtiz.Views.CreateDepartamentoPage"
             x:DataType="viewmodels:CreateDepartamentoViewModel"
             Title="{Binding Title}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
            <Entry Text="{Binding Titulo}"
                   Placeholder="Título"/>

            <Editor Text="{Binding Descripcion}"
                    Placeholder="Descripción"
                    HeightRequest="100"
                    AutoSize="TextChanges"/>

            <Entry Text="{Binding Localizacion}"
                   Placeholder="Localización"/>

            <Entry Text="{Binding Ciudad}"
                   Placeholder="Ciudad"/>

            <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                <Entry Grid.Column="0"
                       Text="{Binding Habitaciones}"
                       Placeholder="Habitaciones"
                       Keyboard="Numeric"/>

                <Entry Grid.Column="1"
                       Text="{Binding Baños}"
                       Placeholder="Baños"
                       Keyboard="Numeric"/>
            </Grid>

            <Editor Text="{Binding LugaresCercanos}"
                    Placeholder="Lugares Cercanos"
                    HeightRequest="100"
                    AutoSize="TextChanges"/>

            <Entry Text="{Binding ImagenUrl}"
                   Placeholder="URL de la Imagen"/>

            <VerticalStackLayout Spacing="10" 
                               Margin="0,20,0,0"
                               HorizontalOptions="Center">
                <Button Text="Guardar"
                        Command="{Binding SaveCommand}"
                        WidthRequest="200"/>

                <Button Text="Cancelar"
                        Command="{Binding CancelCommand}"
                        Style="{StaticResource SecondaryButtonStyle}"
                        WidthRequest="200"/>
            </VerticalStackLayout>

            <ActivityIndicator IsVisible="{Binding IsBusy}"
                             IsRunning="{Binding IsBusy}"
                             HorizontalOptions="Center"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>