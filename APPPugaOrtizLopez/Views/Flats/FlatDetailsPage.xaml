<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
           xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
           xmlns:viewmodels="clr-namespace:APPPugaOrtizLopez.ViewModels;assembly=APPPugaOrtizLopez"
           x:Class="APPPugaOrtizLopez.Views.Flats.FlatDetailsPage"
           BackgroundColor="#FDFBF7"
           Title="Detalles del Departamento">

    <ScrollView>
        <VerticalStackLayout Spacing="0">
            <Grid RowDefinitions="Auto,*">
                <Image Grid.Row="0"
                     Source="{Binding Departamento.ImagenUrl}"
                     HeightRequest="300"
                     Aspect="AspectFill"/>

                <Frame Grid.Row="1" 
                      Margin="0,-20,0,0"
                      Padding="24"
                      CornerRadius="20"
                      HasShadow="True"
                      BorderColor="Transparent"
                      BackgroundColor="White">
                    <VerticalStackLayout Spacing="20">
                        <VerticalStackLayout Spacing="8">
                            <Label Text="{Binding Departamento.Titulo}"
                                 FontSize="28"
                                 FontAttributes="Bold"
                                 TextColor="#2C2C2C"/>
                            <Label Text="{Binding Departamento.Ciudad}"
                                 FontSize="20"
                                 TextColor="#666666"/>
                        </VerticalStackLayout>

                        <BoxView HeightRequest="1" 
                               Color="#E8E8E8"/>

                        <Frame BackgroundColor="#F8F9FA"
                               Padding="16"
                               CornerRadius="12"
                               HasShadow="False">
                            <Label Text="{Binding Departamento.Descripcion}"
                                 TextColor="#2C2C2C"/>
                        </Frame>

                        <Grid ColumnDefinitions="*,*,*" 
                              ColumnSpacing="16"
                              Padding="8">
                            <Frame Grid.Column="0"
                                   BackgroundColor="#F8F9FA"
                                   Padding="16"
                                   CornerRadius="12">
                                <VerticalStackLayout>
                                    <Label Text="ðŸ›ï¸"
                                         FontSize="24"
                                         HorizontalOptions="Center"/>
                                    <Label Text="{Binding Departamento.Habitaciones}"
                                         FontAttributes="Bold"
                                         TextColor="#94A489"
                                         HorizontalOptions="Center"/>
                                    <Label Text="Habitaciones"
                                         FontSize="12"
                                         TextColor="#666666"
                                         HorizontalOptions="Center"/>
                                </VerticalStackLayout>
                            </Frame>

                            <Frame Grid.Column="1"
                                   BackgroundColor="#F8F9FA"
                                   Padding="16"
                                   CornerRadius="12">
                                <VerticalStackLayout>
                                    <Label Text="ðŸš¿"
                                         FontSize="24"
                                         HorizontalOptions="Center"/>
                                    <Label Text="{Binding Departamento.BaÃ±os}"
                                         FontAttributes="Bold"
                                         TextColor="#94A489"
                                         HorizontalOptions="Center"/>
                                    <Label Text="BaÃ±os"
                                         FontSize="12"
                                         TextColor="#666666"
                                         HorizontalOptions="Center"/>
                                </VerticalStackLayout>
                            </Frame>

                            <Frame Grid.Column="2"
                                   BackgroundColor="#F8F9FA"
                                   Padding="16"
                                   CornerRadius="12">
                                <VerticalStackLayout>
                                    <Label Text="ðŸ“"
                                         FontSize="24"
                                         HorizontalOptions="Center"/>
                                    <Label Text="{Binding Departamento.Localizacion}"
                                         FontAttributes="Bold"
                                         TextColor="#94A489"
                                         HorizontalOptions="Center"/>
                                    <Label Text="UbicaciÃ³n"
                                         FontSize="12"
                                         TextColor="#666666"
                                         HorizontalOptions="Center"/>
                                </VerticalStackLayout>
                            </Frame>
                        </Grid>

                        <VerticalStackLayout Spacing="12">
                            <Label Text="Lugares Cercanos"
                                 FontSize="20"
                                 FontAttributes="Bold"
                                 TextColor="#2C2C2C"/>
                            <Frame BackgroundColor="#F8F9FA"
                                   Padding="16"
                                   CornerRadius="12"
                                   HasShadow="False">
                                <Label Text="{Binding Departamento.LugaresCercanos}"
                                     TextColor="#2C2C2C"/>
                            </Frame>
                        </VerticalStackLayout>

                        <BoxView HeightRequest="1" 
                               Color="#E8E8E8"/>

                        <VerticalStackLayout Spacing="16">
                            <Label Text="Comentarios"
                                 FontSize="20"
                                 FontAttributes="Bold"
                                 TextColor="#2C2C2C"/>

                            <Grid ColumnDefinitions="*,Auto" 
                                  ColumnSpacing="12">
                                <Frame Grid.Column="0"
                                       BorderColor="#E8E8E8"
                                       BackgroundColor="#F8F9FA"
                                       Padding="16,12"
                                       CornerRadius="12"
                                       HasShadow="False">
                                    <Entry Placeholder="AÃ±adir comentario"
                                         Text="{Binding Comentario}"
                                         PlaceholderColor="#94A489"
                                         BackgroundColor="Transparent"/>
                                </Frame>

                                <Button Grid.Column="1"
                                      Text="Enviar"
                                      Command="{Binding AddComentarioCommand}"
                                      HeightRequest="50"
                                      WidthRequest="100"
                                      CornerRadius="25"
                                      BackgroundColor="#94A489"
                                      TextColor="White"/>
                            </Grid>

                            <CollectionView ItemsSource="{Binding Departamento.Comentarios}"
                                          Margin="0,8">
                                <CollectionView.EmptyView>
                                    <Label Text="No hay comentarios"
                                         HorizontalOptions="Center"
                                         TextColor="#666666"/>
                                </CollectionView.EmptyView>

                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Frame Margin="0,8"
                                               Padding="16"
                                               CornerRadius="12"
                                               BackgroundColor="#F8F9FA"
                                               HasShadow="False">
                                            <VerticalStackLayout Spacing="8">
                                                <Label Text="{Binding Usuario.Nombre}"
                                                     FontAttributes="Bold"
                                                     TextColor="#2C2C2C"/>
                                                <Label Text="{Binding Contenido}"
                                                     TextColor="#2C2C2C"/>
                                                <Label Text="{Binding FechaCreacion, StringFormat='{0:dd/MM/yyyy HH:mm}'}"
                                                     FontSize="12"
                                                     TextColor="#666666"/>
                                            </VerticalStackLayout>
                                        </Frame>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Frame>
            </Grid>

            <ActivityIndicator IsRunning="{Binding IsLoading}"
                           IsVisible="{Binding IsLoading}"
                           Color="#94A489"
                           HorizontalOptions="Center"
                           Margin="0,16"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>